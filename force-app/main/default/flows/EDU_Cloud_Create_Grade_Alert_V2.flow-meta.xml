    <formulas>
        <description>Get the severity based on grade</description>
        <name>Get_Alert_Severity</name>
        <dataType>String</dataType>
        <expression>IF({!$Record.LetterGrade} =&apos;F&apos;, &apos;High&apos;, &apos;Medium&apos;)</expression>
    </formulas>
    <formulas>
        <description>Get the valid until date, 14 days from current date</description>
        <name>Get_Valid_Until_Date</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 14</expression>
    </formulas>
    <formulas>
        <description>Get valid until date/time, 14 days from start date/time</description>
        <name>Get_Valid_Until_Date_Time</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE({!$Flow.CurrentDateTime} +14)</expression>
    </formulas>
