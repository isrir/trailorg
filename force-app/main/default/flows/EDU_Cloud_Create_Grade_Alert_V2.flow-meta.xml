    <decisions>
        <description>Determines whether LetterGrade is F or not.</description>
        <name>IsGrade_F</name>
        <label>Is Grade F?</label>
        <locationX>380</locationX>
        <locationY>755</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>GradeIs_F</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.LetterGrade</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>F</stringValue>
                </rightValue>
            </conditions>
